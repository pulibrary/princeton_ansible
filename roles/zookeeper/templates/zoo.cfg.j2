{{ ansible_managed | comment }}
tickTime=2000
initLimit=10
syncLimit=5
dataDir={{ zk_data_dir }}
dataLogDir={{ zk_log_dir }}
clientPort={{ zk_client_port }}

# List of servers
{% for node in zk_nodes %}
server.{{ node.id }}={{ node.host }}:{{ zk_leader_port }}:{{ zk_election_port }}{% if node.is_leader %}:participant;{{ zk_client_port }}{% endif %}
{% endfor %}

# Set higher timeout for leader election
electionAlg=3
maxSessionTimeout=60000
