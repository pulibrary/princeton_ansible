[Unit]
Description=Cantaloupe
After=syslog.target network.target

[Service]
Type=simple
WorkingDirectory={{cantaloupe_symlink}}
ExecStart=/bin/bash --login -c "/usr/bin/java -Dcantaloupe.config=./cantaloupe.properties -Xmx2g -jar cantaloupe-{{cantaloupe_version}}.war"
User={{cantaloupe_user}}
Group={{cantaloupe_group}}
UMask=0002

# if we crash, restart
RestartSec=1
Restart=on-failure

# output goes to /var/log/syslog
StandardOutput=syslog
StandardError=syslog

# This will default to "bundler" if we don't specify it
SyslogIdentifier=cantaloupe

[Install]
WantedBy=multi-user.target
