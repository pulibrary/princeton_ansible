---
# {{ ansible_managed | comment }}

# This file is fully data-driven. Define these in group_vars/project/host_vars:
# - otel_receivers (dict)
# - otel_processors (dict)
# - otel_exporters (dict)
# - otel_service_pipelines (dict)
# - otel_extensions (list)
# Optionally add otel_default_resource_attributes (dict) to merge into processors.resource.

{% set merged_processors = otel_processors | default({}) | combine(
  {
    'resource': {
      'attributes': (
        (otel_processors.resource.attributes if (otel_processors.resource is defined and otel_processors.resource.attributes is defined) else [])
        +
        (
          [
            {'action': 'upsert', 'key': k, 'value': v}
            for k, v in (otel_default_resource_attributes | default({})).items()
          ]
          if (otel_default_resource_attributes | default({})) else []
        )
      )
    }
  },
  recursive=True
) %}

receivers:
{{ (otel_receivers | default({})) | to_nice_yaml(indent=2) | indent(2) }}

processors:
{{ (merged_processors | default({})) | to_nice_yaml(indent=2) | indent(2) }}

exporters:
{{ (otel_exporters | default({})) | to_nice_yaml(indent=2) | indent(2) }}

service:
  pipelines:
{{ (otel_service_pipelines | default({})) | to_nice_yaml(indent=4) | indent(4) }}
  extensions: {{ (otel_extensions | default([])) | to_nice_yaml(indent=2) | indent(2) | trim }}
