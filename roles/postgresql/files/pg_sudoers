Defaults:postgres !requiretty
postgres ALL = NOPASSWD: /usr/bin/pg_ctlcluster
postgres ALL = NOPASSWD: /bin/systemctl start postgresql.service
postgres ALL = NOPASSWD: /bin/systemctl stop postgresql.service
postgres ALL = NOPASSWD: /bin/systemctl restart postgresql.service
postgres ALL = NOPASSWD: /bin/systemctl reload postgresql.service
