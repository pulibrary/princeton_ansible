node_name = "{{ inventory_hostname_short }}"
datacenter = "dc1"
data_dir = "/opt/consul"
encrypt = "{{ consul_gossip_encryption_key }}"
retry_join = {{ nomad_server_ips | to_json }}

bind_addr = "{{ ansible_default_ipv4.address }}"
client_addr = "0.0.0.0"
acl {
  enabled = true
  default_policy = "deny"
  enable_token_persistence = true
  tokens {
    initial_management = "{{ consul_acl_management_token }}"
  }
}
