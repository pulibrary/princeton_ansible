# {{ ansible_managed | comment }}
[sssd]
domains = {{ ad_join_ad_domain }}
config_file_version = 2
services = nss, pam, pac

[domain/{{ ad_join_ad_realm }}]
default_shell = {{ ad_join_default_shell }}
krb5_store_password_if_offline = True
cache_credentials = True
krb5_realm = {{ ad_join_ad_realm }}
ad_domain = {{ ad_join_ad_domain }}
realmd_tags = manages-system joined-with-adcli
id_provider = ad
auth_provider = ad
chpass_provider = ad
access_provider = ad
fallback_homedir = /home/%u@%d
use_fully_qualified_names = False
ldap_id_mapping = False
ldap_disable_gc = True
ldap_search_base = dc=pu,dc=win,dc=princeton,dc=edu
