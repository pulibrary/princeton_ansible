# PostgreSQL Client Authentication Configuration File
# ===================================================
#

# DO NOT DISABLE!
# If you change this first entry you will need to make sure that the
# database superuser can access the database using some other method.
# Noninteractive access to all databases is required during automatic
# maintenance (custom daily cronjobs, replication, and similar tasks).
#
# Database administrative login by Unix domain socket
local   all             postgres                                trust
# repmgr
local   replication     {{ repmgr_dbuser_name }}                                  trust
host    replication     {{ repmgr_dbuser_name }}          {{ replication1 }}      md5
host    replication     {{ repmgr_dbuser_name }}          {{ replication0 }}      md5


local   {{ repmgr_db_name }}     {{ repmgr_dbuser_name }}                                  trust
host    {{ repmgr_db_name }}     {{ repmgr_dbuser_name }}          {{ replication1 }}      md5
host    {{ repmgr_db_name }}     {{ repmgr_dbuser_name }}          {{ replication0 }}      md5
# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     md5
# IPv4 local connections:
host    all             all             127.0.0.1/32            md5
# IPv6 local connections:
host    all             all             ::1/128                 md5
# figgy connections
host    all             all             {{ figgy0 }}        md5
host    all             all             {{ figgy1 }}       md5
host    all             all             {{ figgy2 }}       md5
host    all             all             {{ figgy3 }}       md5
host    all             all             {{ figgy4 }}       md5
host    all             all             {{ figgy5 }}       md5
# DPUL connections
host    all             all             {{ dpul0 }}       md5
# orangelight connections
host    all             all             {{ orangelight0 }}       md5
host    all             all             {{ orangelight1 }}       md5
host    all             all             {{ orangelight2 }}       md5
host    all             all             {{ orangelight3 }}       md5
host    all             all             {{ orangelight4 }}       md5
host    all             all             {{ orangelight5 }}       md5
# catalog-staging connections
host    all             all             {{ catalog_staging0 }}       md5
# lae-staging connections
host    all             all             {{ lae_staging0 }}       md5

# Allow replication connections from localhost, by a user with the
# replication privilege.
#local   replication     postgres                                peer
#host    replication     postgres        127.0.0.1/32            md5
#host    replication     postgres        ::1/128                 md5
# replicated data
host    replication             replicant             {{ replication0 }}       md5
# master
host    replication             replicant             {{ replication1 }}       md5
