{{ ansible_managed | comments }}
# journald size limits tuned for this host.
# Policy: target SystemMaxUse = {{ systemd_journal_max_use_mib }}M
#         SystemMaxFileSize  = {{ systemd_journal_max_file_mib }}M
#         SystemMaxFiles     = {{ journald_limits_max_files }}
# NOTE: Enforce Storage=auto so journald cannot be “disabled” via Storage=none.

[Journal]
Storage=auto
SystemMaxUse={{ systemd_journal_max_use_mib }}M
SystemMaxFileSize={{ systemd_journal_max_file_mib }}M
SystemMaxFiles={{ journald_limits_max_files }}
# Intentionally *not* setting SystemKeepFree to avoid starvation side-effects.

