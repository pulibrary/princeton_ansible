default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS", 5) %>
  timeout: 5000

production: &production
  <<: *default
  database: {{ mudd_db_name }}
  host: {{ db_host | default("localhost") }}
  username: {{ mudd_db_user }}
  password: {{ mudd_db_password }}
  port: {{ mudd_db_port }}
